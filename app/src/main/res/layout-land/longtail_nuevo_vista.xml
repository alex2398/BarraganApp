<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:weightSum="6">

    <LinearLayout
        android:layout_width="173dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10px">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/detalle_label_longtail_codigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CODIGO:    "
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detalle_longtail_codigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/detalle_label_longtail_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOMBRE:    "
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detalle_longtail_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detalle_longtail_codigo"
                android:text="TextView"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/detalle_label_longtail_grupo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GRUPO:    "
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detalle_longtail_grupo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detalle_longtail_nombre"
                android:text="TextView"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/detalle_label_longtail_precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRECIO:    "
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detalle_longtail_precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detalle_longtail_grupo"
                android:text="TextView"
                android:textSize="18sp" />
        </LinearLayout>






    </LinearLayout>

    <LinearLayout
        android:layout_width="415dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_weight="5">

        <com.example.si_angeles.barragan.TouchImageView
            android:id="@+id/imagen_longtail"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>




</LinearLayout>